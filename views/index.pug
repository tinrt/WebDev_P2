extends layout

block content
    h1 Contact List
    a(href='/create') Create a new contact
    
    table
        thead
            tr
                th Name
                th Email
                th Phone
                th Address
                th Contact
               
        tbody
            each contact in contacts
                tr
                    td: a(href='/' + contact.ID) #{contact.FirstName} #{contact.LastName}
                    td #{contact.Email}
                    td #{contact.PhoneNumber}
                    td
                        p #{contact.Street}
                        p #{contact.City}, #{contact.State} #{contact.Zip}
                        p #{contact.Country}
                    td
                        input(type='checkbox', disabled, checked=contact.Contact_By_Phone ? true : undefined)
                        | Phone
                        br
                        input(type='checkbox', disabled, checked=contact.Contact_By_Email ? true : undefined)
                        | Email
                        br
                        input(type='checkbox', disabled, checked=contact.Contact_By_Mail ? true : undefined)
                        | Mail
